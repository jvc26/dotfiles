## jvc26 Muttrc 2010

# Account user/password from user file
source ~/.mutt/user

# Use TLS
set ssl_starttls = yes

# Check interval
set mail_check = 60

# Header  & Body cache
set header_cache = ~/Mail/
#set message_cachedir = ~/Mail/

# Maildir
set mbox_type = Maildir

# Editor
set editor = /usr/bin/vim

# Source folders and folder hooks  from folders file
source ~/.mutt/folders

# Source mailboxes from mailbox file
source ~/.mutt/mailboxes

# Mailboxes for the inboxZero project
mailboxes =INBOX.ACTION
mailboxes =INBOX.RESPOND
mailboxes =INBOX.WAITFOR
mailboxes =INBOX.ARCHIVE

# inboxZero macros
macro index,pager "<F2>" "<save-message>=INBOX.ACTION<enter>" "Save to Action mailbox"
macro index,pager "<F3>" "<save-message>=INBOX.RESPOND<enter>" "Save to Respond mailbox"
macro index,pager "<F4>" "<save-message>=INBOX.WAITFOR<enter>" "Save to Waitfor mailbox"
macro index,pager "<F5>" "<save-message>=INBOX.ARCHIVE<enter>" "Save to Archive mailbox"

# Source muttrc to ~ key
macro index ~ ":source ~/.muttrc<enter>"

# Dont ask re: moving messages
unset confirmappend

# Source Aliases from alias file
source ~/.mutt/aliases
set alias_file = ~/.mutt/aliases

# Sending config
set sendmail="/usr/bin/msmtp"
set envelope_from="yes"
