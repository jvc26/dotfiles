# jvc26 Screenrc 2010

# Escape map to Ctrl+b
escape ^Bb

# Turn off the splash screen
startup_message off 

# Hardstatusline for screens
hardstatus alwayslastline "%{= dR} %-Lw%50>%{= dG}%n%f* %{= dW}%t%{= dR}%+Lw%<"

# ... and bind F8 to toggle it on, F9 off
bindkey -k k8 hardstatus alwayslastline
bindkey -k k9 hardstatus alwaysignore

# Keybindings for next and previous windows to F11 and F12
bindkey -k F1 prev
bindkey -k F2 next

# Default window initialisations
screen -t top top
screen -t irssi irssi
screen -t bash

# Focus setting to start on the shell window
focus
select 2
