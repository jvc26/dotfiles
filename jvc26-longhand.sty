% Longhand notes style file for XeLateX
% jvc26 2011

% Prelim
\ProvidesPackage{jvc26-longhand}

% Packages
\RequirePackage{multicol}
\RequirePackage{fancyhdr}
\RequirePackage{xunicode}
\RequirePackage{xltxtra}
\RequirePackage{fontspec}
\RequirePackage{graphicx}
\RequirePackage{xcolor}

% Margin setup
\addtolength{\oddsidemargin}{-.875in}
\addtolength{\evensidemargin}{-.875in}
\addtolength{\textwidth}{1.75in}

\addtolength{\topmargin}{-.875in}
\addtolength{\textheight}{1.75in}

% Font settings
\defaultfontfeatures{Mapping=tex-text}
\setmainfont[Ligatures=Common]{GaramondPremrPro}

% Grey for footer
\definecolor{Grey}{rgb}{.7,.7,.7}

% Blue for definitions
\definecolor{definition}{HTML}{B3ECFF}

% Larger fonts for emphasis
\newcommand{\emp}[1]{{\LARGE{#1}}}

\newcommand{\defn}[1]{{\colorbox{definition}{#1}}}

% Paragraph settings
\setlength{\parindent}{0.0in}
\setlength{\parskip}{0.1in}

% Options for setting filename etc
\newcommand{\filename}{<++>}
\newcommand{\subject}{<++>}
\newcommand{\name}{JV Clemence}

% Commands for page setup, headers and footers
\newcommand{\heading}{\begin{center}\Huge \filename\end{center}}

\newcommand{\ftstyle}[1]{\color{Grey} #1}

\pagestyle{fancy}
\fancyhead{}
\fancyfoot{}
\renewcommand{\headrulewidth}{0pt}

\lhead{\name}
\rhead{\subject}

\lfoot{\ftstyle{\thepage}} 
\cfoot{\ftstyle{Last updated: \today\-}}
\rfoot{\ftstyle{\filename}}
